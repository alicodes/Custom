<div class="typediv">
    <h1>Choose a template type...</h1>

    <div class="row">
        <div class="col-lg-4 template" id="shirt">
            <h1>Shirt</h1>
        </div>
        <div class="col-lg-4 template" id="jacket">
            <h1>Jacket</h1>
            <img src = "/images/jacket.png">
        </div>
        <div class="col-lg-4 template" id="pants">
            <h1>Pants</h1>
        </div>
    </div>

    <button type="button" class="btn btn-primary" id="nextbtn1" disabled>Next</button>
</div>

<div class="cusdiv" hidden>
    <h1>Choose possible customizations...</h1>

    <div class="row">
        <div class="card w-25">
            <div class="card-body">
                <h5 class="card-title">Buttons</h5>
