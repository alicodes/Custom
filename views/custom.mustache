{{>scriptcss}}
<style>

</style>
{{>header}}
{{>customizernav}}
<h2>
    Customize
</h2>
<div class="row d-flex border justify-content-evenly mb-3">
    {{#template}}
        <div class="card text-center border-0">
            <div class="pb-2 card-header bg-transparent border-0">
                <h2 class="card-title">{{templatename}}</h2>
                <input type="hidden" id="templateid" value="{{templateid}}">
                <span>Designed By: <a href="#" style="text-decoration:none">@{{username}}</a></span>
            </div>
            <img class="card-image mx-auto mb-4 border rounded" src="{{picture}}" style="width:300px;height:300px;">
            <div class="card-footer">
                <p class="card-text">Template Description: {{description}}</p>
                <input type="hidden" id="price" value="{{price}}">
                <span class="card-text">Garmet Base Price: ${{price}}</span>
            </div>
        </div>
    {{/template}}
</div>
<h3 class="text-center">Customizations</h3>
<div class="row d-flex justify-content-evenly">
    {{#customizations}}
        <div class="card col-3">
            <div class="card-body text-center">
                <h5 class="card-title">{{customtype}}</h5>
                <p class="card-text">Description: {{description}}</p>
                <p>Price: ${{price}}</p>
                <input type="hidden" id="{{customtype}}price" value="{{price}}">
            </div>
            <div class="card-footer bg-transparent">
                <div class="text-success text-center pb-2"><span hidden id="{{customtype}}msg">Added <i class="fa-solid fa-check"></i></span></div>
                <div class="d-flex justify-content-evenly w-100">
                    <input type="hidden" id="{{customtype}}id" value="{{customid}}">
                    <button type="button" class="btn btn-primary addbtn" id="{{customtype}}add" value="{{customtype}}">Add to Cart</button>
                    <button type="button" class="btn btn-danger removebtn disabled" id="{{customtype}}remove" value="{{customtype}}">Remove</button>
                </div>
            </div>
        </div>
    {{/customizations}}
    {{#template}}
        <div class="text-center pt-4">
            <h5 id="total">Total: ${{price}}</h5>
        </div>
    {{/template}}
    <button class="btn btn-primary mt-4 mb-4 w-50" id="orderbtn">Order Now</button>
</div>
<script src="/js/custom.js"></script>
{{>footer}}